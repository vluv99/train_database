  <!--headline-->
  <form id="salary-add" class="search-form">
    <legend>
      <h3 class="mdc-typography--headline3 mdc-theme--on-primary search-form__title">Salary Management</h3>
    </legend>

    <div class="search-form--fileds">

      <!--worker's name-->
      <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon"
        data-mdc-auto-init="MDCTextField">
        <i class="material-icons mdc-text-field__icon">person</i>
        <input class="mdc-text-field__input" type="text" id="text-field-NAME-input" name="name">
        <div class="mdc-notched-outline">
          <div class="mdc-notched-outline__leading"></div>
          <div class="mdc-notched-outline__notch">
            <label for="text-field-hero-input" class="mdc-floating-label">Name</label>
          </div>
          <div class="mdc-notched-outline__trailing"></div>
        </div>
      </div>

      <!--worker's bithdate-->
      <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon"
        data-mdc-auto-init="MDCTextField">
        <i class="material-icons mdc-text-field__icon">calendar_today</i>
        <input class="mdc-text-field__input" type="date" id="text-field-BIRTH-input" name="birth">
        <div class="mdc-notched-outline">
          <div class="mdc-notched-outline__leading"></div>
          <div class="mdc-notched-outline__notch">
            <label for="text-field-hero-input" class="mdc-floating-label">Birthdate</label>
          </div>
          <div class="mdc-notched-outline__trailing"></div>
        </div>
      </div>

      <!--month-->
      <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon"
        data-mdc-auto-init="MDCTextField">
        <i class="material-icons mdc-text-field__icon">date_range</i>
        <input class="mdc-text-field__input" type="date" id="text-field-DATE-input" name="date">
        <div class="mdc-notched-outline">
          <div class="mdc-notched-outline__leading"></div>
          <div class="mdc-notched-outline__notch">
            <label for="text-field-hero-input" class="mdc-floating-label">Date</label>
          </div>
          <div class="mdc-notched-outline__trailing"></div>
        </div>
      </div>

      <!--worked hours-->
      <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon"
        data-mdc-auto-init="MDCTextField">
        <i class="material-icons mdc-text-field__icon">history</i>
        <input class="mdc-text-field__input" type="number" id="text-field-HOURS-input" name="hours">
        <div class="mdc-notched-outline">
          <div class="mdc-notched-outline__leading"></div>
          <div class="mdc-notched-outline__notch">
            <label for="text-field-hero-input" class="mdc-floating-label">Worked Hours</label>
          </div>
          <div class="mdc-notched-outline__trailing"></div>
        </div>
      </div>

      <!--hourly wage-->
      <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon"
        data-mdc-auto-init="MDCTextField">
        <i class="material-icons mdc-text-field__icon">attach_money</i>
        <input class="mdc-text-field__input" type="number" id="text-field-FROM-input" name="edit-payment">
        <div class="mdc-notched-outline">
          <div class="mdc-notched-outline__leading"></div>
          <div class="mdc-notched-outline__notch">
            <label for="text-field-hero-input" class="mdc-floating-label">Hourly wage</label>
          </div>
          <div class="mdc-notched-outline__trailing"></div>
        </div>
      </div>

      <!--add-->
      <div class="finish-search">

        <button id="subbmit_button" class="mdc-button salary_form-button" data-mdc-auto-init="MDCRipple">
          <div class="mdc-button__ripple"></div>
          <span class="mdc-button__label">Add</span>
        </button>

      </div>

    </div>

  </form>

  <!--table-->
